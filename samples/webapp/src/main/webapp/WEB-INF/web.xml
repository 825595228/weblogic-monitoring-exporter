<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>WLS Prometheus Exporter</display-name>
  <servlet>
    <servlet-name>rest-exporter</servlet-name>
    <servlet-class>io.prometheus.wls.rest.ExporterServlet</servlet-class>
      <init-param>
          <param-name>configuration</param-name>
          <param-value>/rest.yml</param-value>
      </init-param>
  </servlet>

  <servlet>
    <servlet-name>landing-page</servlet-name>
    <servlet-class>io.prometheus.wls.rest.MainServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>configuration</servlet-name>
    <servlet-class>io.prometheus.wls.rest.ConfigurationServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>landing-page</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>rest-exporter</servlet-name>
    <url-pattern>/metrics</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>configuration</servlet-name>
    <url-pattern>/configure</url-pattern>
  </servlet-mapping>
</web-app>
